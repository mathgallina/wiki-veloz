{
  "name": "kiro-task-manager",
  "version": "2.0.0",
  "description": "Scripts para gerenciar tarefas e métricas do .kiro - Context-Driven Documentation",
  "main": "task-manager.js",
  "scripts": {
    "_comment_setup": "=== SETUP E INSTALAÇÃO ===",
    "install": "chmod +x *.js *.sh && echo '✅ Permissões configuradas!'",
    "setup": "./install.sh",
    "_comment_basic": "=== COMANDOS BÁSICOS ===",
    "scan": "node task-manager.js scan",
    "status": "node task-manager.js status",
    "list": "node task-manager.js list",
    "complete": "node task-manager.js complete",
    "help": "node task-manager.js help",
    "_comment_creation": "=== CRIAÇÃO E VALIDAÇÃO ===",
    "new-feature": "./new-feature.sh",
    "validate": "./validate-project.sh",
    "validate-fix": "./validate-project.sh --fix",
    "_comment_metrics": "=== ANÁLISE DE MÉTRICAS ===",
    "metrics-completeness": "./metrics-completeness.sh",
    "metrics-completeness-detailed": "./metrics-completeness.sh --detailed",
    "metrics-completeness-json": "./metrics-completeness.sh --json",
    "metrics-quality": "./metrics-code-quality.sh",
    "metrics-quality-detailed": "./metrics-code-quality.sh --detailed",
    "metrics-quality-json": "./metrics-code-quality.sh --json",
    "metrics-progress": "./metrics-progress.sh",
    "metrics-progress-detailed": "./metrics-progress.sh --detailed",
    "metrics-progress-json": "./metrics-progress.sh --json",
    "_comment_dashboards": "=== DASHBOARDS ===",
    "dashboard": "./dashboard.sh",
    "dashboard-compact": "./dashboard.sh --compact",
    "dashboard-watch": "./dashboard.sh --refresh-interval 30",
    "full-dashboard": "./full-dashboard.sh",
    "full-dashboard-detailed": "./full-dashboard.sh --detailed",
    "full-dashboard-json": "./full-dashboard.sh --json",
    "full-dashboard-save": "./full-dashboard.sh --save-report",
    "_comment_feedback": "=== SISTEMA DE FEEDBACK ===",
    "collect-feedback": "./collect-feedback.sh",
    "collect-feedback-quick": "./collect-feedback.sh --quick",
    "collect-feedback-anonymous": "./collect-feedback.sh --anonymous",
    "analyze-feedback": "./analyze-feedback.sh",
    "analyze-feedback-detailed": "./analyze-feedback.sh --detailed",
    "analyze-feedback-json": "./analyze-feedback.sh --json",
    "analyze-feedback-recent": "./analyze-feedback.sh --since 30",
    "_comment_legacy": "=== COMANDOS LEGADOS ===",
    "patterns": "node task-manager.js patterns",
    "check-patterns": "node check-patterns.js",
    "report": "node task-manager.js scan && node generate-report.js",
    "watch": "node watch.js",
    "_comment_aliases": "=== ALIASES ÚTEIS ===",
    "metrics": "npm run metrics-progress && npm run metrics-quality && npm run metrics-completeness",
    "health": "npm run validate && npm run full-dashboard",
    "quick-status": "npm run status && npm run dashboard-compact",
    "deep-analysis": "npm run full-dashboard-detailed --save-report"
  },
  "keywords": [
    "kiro",
    "cdd",
    "task-management",
    "project-management",
    "context-driven-documentation",
    "metrics",
    "dashboard",
    "feedback",
    "validation"
  ],
  "author": "Context-Driven Documentation",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/your-project"
  },
  "homepage": "https://github.com/your-org/your-project#readme",
  "bugs": {
    "url": "https://github.com/your-org/your-project/issues"
  }
}
